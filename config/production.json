{
  "env": "production",
  "server": {
    "port": 80,
    "host": "0.0.0.0"
  },
  "database": {
    "sqlite": {
      "path": "./data/specgen-production.db"
    }
  },
  "logging": {
    "level": "info",
    "prettyPrint": false,
    "colorize": false
  },
  "security": {
    "helmet": {
      "crossOriginEmbedderPolicy": true,
      "contentSecurityPolicy": true
    }
  },
  "features": {
    "enableMetrics": true,
    "enableCache": true,
    "enableRateLimit": true
  }
}