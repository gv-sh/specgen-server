{
  "name": "@gv-sh/specgen-server",
  "version": "0.14.0",
  "description": "SpecGen Server - API for Speculative Fiction Generator",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development node --watch server.js",
    "dev:legacy": "NODE_ENV=development nodemon server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand --config jest.config.js --colors=true --detectOpenHandles",
    "migrate": "node scripts/migrate.js",
    "lint": "eslint .",
    "generate-api-spec": "node scripts/generateApiSpec.js"
  },
  "keywords": [
    "api",
    "generator",
    "fiction",
    "openai",
    "speculative-fiction",
    "ai-generation",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "server.js",
    "config.js", 
    "services.js",
    "scripts/",
    "api-spec.json",
    "tests/",
    "docs/",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gv-sh/specgen-server.git"
  },
  "homepage": "https://github.com/gv-sh/specgen-server#readme",
  "bugs": {
    "url": "https://github.com/gv-sh/specgen-server/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "axios": "^1.8.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "pino": "^10.1.0",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@jest/globals": "^30.2.0",
    "eslint": "^9.25.1",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.4"
  },
  "optionalDependencies": {
    "pino-pretty": "^13.1.2"
  }
}
